{
  "manifest_version": 2,
  "name": "Bookmark Search Engine",
  "version": "0.0.1",
  "author": "Kalin Kochnev <kalin.kochnev@gmail.com>",
  "description": "A mini-search engine for your bookmarks",
  "icons": {
    "32": "icons/bm-32.png"
  },
  
  "permissions": [
    "bookmarks",
    "storage",
    "webrequest",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icons/bm-32.png",
    "default_title": "Bookmark Search Engine",
    "default_popup": "popup/settings.html"
    
  },

  "omnibox": { "keyword" : "bk" },
  
  
  "background": {
    "scripts": ["background/main.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "wasm/bookmark_search.wasm"
  ]
}